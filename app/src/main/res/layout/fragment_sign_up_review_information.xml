<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.SignUpReviewInformation">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="173dp"
        android:layout_height="193dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_wecare" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        tools:context=".Fragments.SignUpAccountInformation">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:src="@drawable/secondarycolor_box" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Fragments.SignUpAccountInformation">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/header_h4"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Review"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                style="@style/font_BodyRegular"
                android:textColor="@color/grayText"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:text="Please review the information you have given."
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="16dp"
        style="@style/header_h6"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="Full Name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:textColor="@color/grayText"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="Christian Daniel Noriega Perez"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        style="@style/header_h6"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="User type"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:textColor="@color/grayText"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="User"/>

    <TextView
        style="@style/header_h6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:paddingStart="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="Email Address"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:textColor="@color/grayText"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="christian.daniel.perez12@gmail.com"/>


</LinearLayout>