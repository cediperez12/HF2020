<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.SignUpUserInformation">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="173dp"
        android:layout_height="193dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_wecare" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        tools:context=".Fragments.SignUpAccountInformation">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:src="@drawable/secondarycolor_box" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".Fragments.SignUpAccountInformation">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                style="@style/header_h4"
                android:text="User Information"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/font_BodyRegular"
                android:textColor="@color/grayText"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:lineHeight="24dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:text="We have to know what type of user you are."
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_sign_up_user_info_btn_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/colorPrimary"
            android:text="User"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_sign_up_user_info_btn_nurse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/colorPrimary"
            android:text="Nurse"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_sign_up_user_info_btn_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor"
            app:strokeColor="@color/colorPrimary"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

            android:layout_margin="8dp"
            android:padding="16dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/f_sign_up_user_info_btn_runner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/colorPrimary"
            android:text="Runner"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textAllCaps="false"
            android:layout_margin="8dp"
            android:padding="16dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>