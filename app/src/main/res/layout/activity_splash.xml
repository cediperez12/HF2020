<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <com.google.android.material.button.MaterialButton
        style="@style/TextAppearance.MaterialComponents.Button"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:padding="14dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/splash_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/font_BodyRegular"
        android:layout_above="@+id/splash_txtv_signup"
        android:textAlignment="center"
        android:text="Don't have an account yet?"/>

    <TextView
        android:id="@+id/splash_txtv_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        style="@style/font_BodyBold"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Sign up here"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="334dp"
        android:layout_height="349dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="29dp"
        android:layout_toStartOf="@+id/imageView2"
        app:srcCompat="@drawable/wecare_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="202dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="-3dp"
        app:srcCompat="@drawable/topleft_borromright_edge" />

</RelativeLayout>